<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/vendorImage"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/hut"
                        />

                    <ImageView
                        android:id="@+id/ivCamera"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignRight="@+id/vendorImage"
                        android:layout_below="@+id/vendorImage"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_camera" />
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivCamera"
                        android:text="Name"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"/>

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvName"
                        />
                    <TextView
                        android:id="@+id/etCostPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etName"
                        android:text="CostPrice"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"/>

                    <EditText
                        android:id="@+id/etCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCostPrice"
                        android:inputType="number" />
                    <TextView
                        android:id="@+id/SizeChart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCost"
                        android:text="Size Available"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"/>

                    <!--<Spinner-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@+id/SizeChart"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:id="@+id/spinnerSizeChart">-->

                    <!--</Spinner>-->
                    <TextView
                        android:id="@+id/tvdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinnerSizeChart"
                        android:text="Description"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/SizeChart"
                        android:layout_marginTop="20dp"
                        android:id="@+id/spinnerSizeChart"
                        android:layout_centerHorizontal="true"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S"
                            android:layout_marginHorizontal="30dp"

                            android:id="@+id/chkbox_small"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:id="@+id/chkbox_medium"
                            android:layout_marginHorizontal="30dp"
                            android:layout_toEndOf="@+id/chkbox_small"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L"
                            android:id="@+id/chkbox_large"
                            android:layout_marginHorizontal="30dp"
                            android:layout_toEndOf="@+id/chkbox_medium"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XL"
                            android:id="@+id/chkbox_xlarge"
                            android:layout_marginHorizontal="30dp"
                            android:layout_below="@+id/chkbox_small"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXL"
                            android:id="@+id/chkbox_xxlarge"
                            android:layout_marginHorizontal="30dp"
                            android:layout_below="@+id/chkbox_small"
                            android:layout_toEndOf="@+id/chkbox_xlarge"/>

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/etdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvdescription"
                         />



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etdescription"
                        android:textColor="@color/White"
                        android:paddingHorizontal="60dp"
                        android:text="Upload"
                        android:id="@+id/btnUpload"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/loginbutton"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>

        </RelativeLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>
