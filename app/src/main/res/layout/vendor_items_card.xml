<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relLayout"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardId"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/CardViewImageView"
            android:layout_width="match_parent"
            android:layout_height="230dp"

            />

        <TextView
            android:id="@+id/CardViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CardViewImageView"
            android:textSize="34sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/Black"

            android:text="Product name"
            />
         <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:id="@+id/linearLayoutCard"
             android:layout_below="@+id/CardViewProductName"
             android:layout_marginTop="5dp"
             >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/PriceRupeeSymbol"
             android:text="â‚¹"
             android:layout_below="@+id/CardViewProductName"
             android:textSize="30sp"

             android:layout_marginStart="5dp"
             android:textStyle="bold"
             />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/PriceEntered"
              android:layout_marginLeft="5dp"
              android:text="000"
              android:layout_toEndOf="@+id/PriceRupeeSymbol"
              android:layout_below="@id/CardViewProductName"

              android:textSize="30sp"/>
         </LinearLayout>
            <RatingBar
                android:layout_below="@+id/linearLayoutCard"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:layout_centerHorizontal="true"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:layout_marginTop="5dp"


                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
