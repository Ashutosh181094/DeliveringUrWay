<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VendorSelectCity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_city"
            android:src="@drawable/vendor_registration_city"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vendor_registration_city_title"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vendor_registration_city_title_text"
            android:text="Please select your City"
            android:fontFamily="@font/roboto_thin"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            />

    </LinearLayout>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_spinner"
        android:layout_centerHorizontal="true"

       android:layout_centerVertical="true">


    </Spinner>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arrow_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/arrow"

        android:layout_below="@+id/city_spinner"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>