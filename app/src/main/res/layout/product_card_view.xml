<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="150dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/product_card_Image"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/product_card_text_description"
                android:layout_below="@+id/product_card_Image"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_card_view_PriceRupeeSymbol"
                android:text="â‚¹"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/product_card_text_description"
                android:textSize="15sp">


            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PriceEntered"
                android:layout_marginLeft="5dp"
                android:text="000"
                android:layout_toEndOf="@+id/product_card_view_PriceRupeeSymbol"
                android:layout_below="@id/product_card_text_description"

                android:textSize="15sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
