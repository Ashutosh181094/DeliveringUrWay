<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addphotobackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/vendorImage"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/hut"
                        app:civ_border_color="@color/Black"
                        app:civ_border_width="0.5dp"
                        app:civ_fill_color="@color/blue1" />

                    <ImageView
                        android:id="@+id/ivCamera"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignRight="@+id/vendorImage"
                        android:layout_below="@+id/vendorImage"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_camera" />

                    <TextView
                        android:id="@+id/etCostPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivCamera"
                        android:text="CostPrice"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"/>

                    <EditText
                        android:id="@+id/etCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCostPrice"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tvdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCost"
                        android:text="Description"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"/>

                    <EditText
                        android:id="@+id/etdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvdescription" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etdescription"
                        android:layout_marginLeft="120dp"
                        android:text="Upload"
                        android:background="@drawable/loginbutton"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>