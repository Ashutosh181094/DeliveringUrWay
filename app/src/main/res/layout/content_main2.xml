<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <android.support.design.widget.AppBarLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@android:color/transparent"
       android:elevation="10dp">

       <android.support.v7.widget.Toolbar
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:background="@null"
           android:elevation="10dp">

       </android.support.v7.widget.Toolbar>
   </android.support.design.widget.AppBarLayout>


    </LinearLayout>
        <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"
        app:elevation="0dp"
        />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_gravity="center_horizontal">
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal"
    android:padding="4dp"
    android:id="@+id/_main_content_linear_layout1">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:elevation="5dp"
        android:background="@drawable/rounded_corners"
        android:layout_margin="10dp"
        android:id="@+id/containerFOOD"
        android:focusable="true"
        android:clickable="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fork"
            android:id="@+id/FoodIcon"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FoodIcon"
            android:text="Food"
            android:textSize="20sp"

            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"


            android:id="@+id/tvFood"
            android:background="@drawable/rounded_corners"></TextView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:elevation="5dp"
        android:background="@drawable/rounded_corners"
        android:layout_margin="10dp"
        android:id="@+id/containerCLOTHING"
        android:focusable="true"
        android:clickable="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clothingicon"
            android:id="@+id/ClotingIcon"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ClotingIcon"
            android:text="Fashion"
            android:textSize="20sp"

            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"

            android:id="@+id/tvClothing"

            />
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"
        android:id="@+id/_main_content_linear_layout2">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:elevation="5dp"
            android:background="@drawable/rounded_corners"
            android:layout_margin="10dp"
            android:id="@+id/containerRENTAL"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/BikeIcon"
                android:layout_width="33dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/bike_icon_png"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BikeIcon"
                android:text="Rentals"
                android:textSize="20sp"

                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"


                android:id="@+id/tvRentals"
                android:background="@drawable/rounded_corners">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:elevation="5dp"
            android:background="@drawable/rounded_corners"
            android:layout_margin="10dp"
            android:id="@+id/containerCOMINGSOON"
            android:focusable="true"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/ComingSoonIcon"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="60dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ComingSoonIcon"
                android:text="Coming Soon"
                android:textSize="15sp"

                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"

                android:id="@+id/tvComingSoon"

                />
        </RelativeLayout>
    </LinearLayout>
     </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
