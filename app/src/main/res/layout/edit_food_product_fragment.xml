<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:elevation="4dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linear_layout_camera_view_wrapper"
                        android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/vendorImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/hut"
                        />


                        <ImageView
                            android:id="@+id/ivCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vendorImage"
                            android:layout_marginTop="150dp"
                            android:layout_toRightOf="@+id/vendorImage"
                            android:src="@drawable/ic_camera" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/etCostPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_layout_camera_view_wrapper"
                        android:text="CostPrice"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"/>

                    <EditText
                        android:id="@+id/etCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCostPrice"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tvdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCost"
                        android:text="Description"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"/>

                    <EditText
                        android:id="@+id/etdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvdescription" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etdescription"
                        android:layout_centerHorizontal="true"
                        android:text="SAVE"
                        android:paddingHorizontal="50dp"
                        android:textColor="@color/White"
                        android:id="@+id/btnUpload"
                        android:background="@drawable/loginbutton"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>
